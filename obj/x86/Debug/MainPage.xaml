                    <TextBlock>Select Station</TextBlock>
                    <ComboBox x:ConnectionId='7' Name="ComboxBox1"                               Width="150" Margin="10,0"></ComboBox>
                </StackPanel>

                <!--
             <TextBlock x:Name = "stationDetailsTextBox"/>
 
                StackPanel Orientation="Horizontal" Margin="20">

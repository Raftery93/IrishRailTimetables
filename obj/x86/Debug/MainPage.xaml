<Page x:ConnectionId='1'
    x:Class="IrishRailTimetables.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IrishRailTimetables"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:MyLocation x:Key="xamlLocation"/>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox x:ConnectionId='2' x:Name="preferedStation"                                      >

        </TextBox>

        <Pivot x:ConnectionId='3' x:Name="pvtTabs"                                            
               Grid.Row="1">

            <PivotItem x:ConnectionId='4' Header="All Stations" Background="Silver" x:Name="pvtAllStations">
                <StackPanel Orientation="Horizontal" Margin="20">
                    <TextBlock>Select Station and Click Select</TextBlock>
                    <ComboBox x:ConnectionId='10' Name="ComboxBox1"                               Width="150" Margin="10,0"></ComboBox>
                    <Button x:ConnectionId='11' Content="Select"                       />
                    <TextBlock x:ConnectionId='12' x:Name = "stationDetailsTextBox"/>
                </StackPanel>
            </PivotItem>
            
            <PivotItem x:ConnectionId='5' Header="Closest Station" Background="Orange" x:Name="pvtClosestStation">
                <StackPanel Orientation="Horizontal" Margin="20">
                    <Button x:ConnectionId='7' Content="Get Location"                              />
                    <TextBlock x:ConnectionId='8' x:Name = "LatitudeTextBox"/>
                    <TextBlock x:ConnectionId='9' x:Name = "LongitudeTextBox"/>
                </StackPanel>
            </PivotItem>
            
            <PivotItem x:ConnectionId='6' Header="Document your Travels" Background="Blue" x:Name="pvtDocumentTravels">

            </PivotItem>
            
        </Pivot>


    </Grid>
</Page>


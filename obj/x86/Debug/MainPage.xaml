                <ComboBox Name="ComboxBox1" ItemsSource="{x:Bind StuList}" Width="150" Margin="10,0"></ComboBox>
                </StackPanel>
                
                 -->

            </PivotItem>
            <PivotItem x:ConnectionId='5' Header="Closest Station" Background="Orange" x:Name="pvtClosestStation">
                <TextBlock Text="Laaad"/>
            </PivotItem>
            <PivotItem x:ConnectionId='6' Header="Document your Travels" Background="Blue" x:Name="pvtDocumentTravels">

